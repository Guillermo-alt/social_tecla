<%- include('headers/header.index.ejs')%>

<body id="body">

    <div class="container">
        <div class="main-body">

              <!-- *****nav and browser***** -->
        
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <a href="" data-bs-toggle="modal" data-bs-target="#photo_profile">
                          <img id="profile_photo" src="" alt="Admin" class="rounded-circle" width="150">
                          </a>
                        <div class="mt-3">
                          <h4 id="userName">John Doe</h4>
                          <p class="text-secondary mb-1">Full Stack Developer</p>
                          <button type="button" class="btn btn-primary  mb-2 mt-3" data-bs-toggle="modal" data-bs-target="#modalChangePass">Change password</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card mt-3">
                    <h4 class="d-flex align-items-center m-3">Social Network</h4>
                    <ul id="listSocial" class="list-group list-group-flush">
    
                    </ul>
                  </div>
                  <input type="text" placeholder="https://www.facebook.com/????" id="social" class=""><button type="button" id="addSocial" class="btn btn-success m-2">+</button>
                  
                  <div class="card mt-3">
                    <h4 class="d-flex align-items-center m-3">Languages</h4>
                    <ul id="listaLanguages" class="list-group list-group-flush">
    
                    </ul>
                  </div>
                  <div class="card mt-3">
                    <h4 class="d-flex align-items-center m-3">Hobbies</h4>
                    <ul id="listHobbies" class="list-group list-group-flush">
    
                    </ul>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                      <h4 class="d-flex align-items-center m-3">Profile</h4>
                      <div><button id="logout" class="btn btn-danger offset-10">Logout</button></div>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div id="fullname" class="col-sm-9 text-secondary">
                         
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Email</h6>
                        </div>
                        <div  id="email"  class="col-sm-9 text-secondary">
                         
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Date of birth</h6>
                        </div>
                        <div id="date" class="col-sm-9 text-secondary">
                         ***
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6  class="mb-0">Phone</h6>
                        </div>
                        <div id="phone" class="col-sm-9 text-secondary">
                          
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Address</h6>
                        </div>
                        <div id="address" class="col-sm-9 text-secondary">
                          ***
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="offset-9">
                          <button type="button" class="btn btn-primary " data-bs-toggle="modal" data-bs-target="#cover_page">Change cover</button>
                        </div>
                      </div>
                    </div>
                  </div>
    
                  <div class="row gutters-sm">
                    <div class="col-sm-6">
                      <div class="card">
                        <div id="skillList" class="card-body">
                          <h4 class="d-flex align-items-center mb-3">Skills</h4>      
                        </div>
                      </div>
                      <input type="text" placeholder="Node js" id="skill" class=""><button type="button" id="addSkill" class="btn btn-success m-2">+</button>
                  
                    </div>
                    <div class="col-sm-6 mb-3">
                      <div class="card">
                        <h4 class="d-flex align-items-center m-3">Studies</h4>
                        <ul id="studieList" class="list-group list-group-flush">
        
                        </ul>
                      </div>
                      <input type="text" placeholder="2009-2014" id="period" class="mt-2"> <input type="text"  placeholder="School" id="studies" class=""><button type="button" id="addStudies" class="btn btn-success m-2">+</button>
                    </div>
                    <div class="col-sm-6 mb-3">
                      <div class="card">
                        <h4 class="d-flex align-items-center m-3">Friends</h4>
                        <ul id="friendsList" class="list-group list-group-flush">
        
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>

        <!-- Modal change password-->
        <div class="modal fade" id="modalChangePass" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="mb-3">
                    <label class="form-label">New password</label>
                    <input type="password" class="form-control" id="pass1" required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">New password</label>
                    <input type="password" class="form-control" id="pass2" required>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="changePass" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>


        <!-- Modal upload photo_profile-->
        <div class="modal fade" id="photo_profile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change profile picture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form id="formUpload"  method="post" enctype="multipart/form-data" action="">
                  <input type="file" id="img_profile" name="img_profile">
                  <input type="submit" id="sendFormUplaod" value="Submit">
              </form>
              </div>
            </div>
          </div>
        </div>

         <!-- Modal upload cover_page-->
         <div class="modal fade" id="cover_page" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change cover page </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form id="formUploadcover"  method="post" enctype="multipart/form-data" action="">
                  <input type="file" id="cover_page" name="cover_page">
                  <input type="submit" id="sendFormUplaodcover" value="Submit">
              </form>
              </div>
            </div>
          </div>
        </div>

        

    <script src="/assets/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html> 